<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fafafa"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <android.support.wearable.view.GridViewPager
        android:id="@+id/pager"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:keepScreenOn="true" />
    <ProgressBar
        android:layout_height="96dp"
        android:layout_width="96dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:indeterminate="true"
        android:id="@+id/loading"
        android:indeterminateDrawable="@drawable/hubway_loading"
        android:layout_gravity="center" />
    <Switch
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/metricSwitch"
        android:layout_gravity="top|center_horizontal"
        android:textOn=""
        android:textOff=""
        android:showText="false"
        android:track="@drawable/switch_track"
        android:thumb="@drawable/switch_thumb"
        android:switchMinWidth="64dp"
        android:switchPadding="0px"
        android:thumbTextPadding="16dp"
        android:layout_marginTop="16dp"
        android:checked="true" />
    <android.support.wearable.view.DotsPageIndicator xmlns:wear="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dotsIndicator"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="24dp"
        wear:dotColor="#EDEDED"
        wear:dotColorSelected="#AED581" />
</FrameLayout>